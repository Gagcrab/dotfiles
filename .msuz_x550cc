alias vim='flatpak run org.vim.Vim $@'
alias emacs='flatpak run org.gnu.emacs $@'

export BROWSER=firefox
EDITOR='flatpak run org.vim.Vim'
SUDO_EDITOR='nano -w'      # vim is not installed by default in toolboxes
export EDITOR SUDO_EDITOR

# Things are unstable unless these are disabled
export MOZ_WEBRENDER=0
export MOZ_X11_EGL=0

if [[ $(hostname) == "java-dev" ]]; then
    export JAVA_HOME=/usr/lib/jvm/java-openjdk
    export MAVEN_HOME=/opt/apache-maven-3.8.1
    export PATH="$MAVEN_HOME/bin:$PATH"
elif [[ $(hostname) == "perl-dev" ]]; then
    source ~â€‹/perl5/perlbrew/etc/bashrc
fi

# GPU
#export vblank_mode=0
export LIBVA_DRIVER_NAME=vdpau
export __GL_THREADED_OPTIMIZATION=1
export __GL_SHADER_DISK_CACHE_SKIP_CLEANUP=1

export PATH="$HOME/.local/bin:$PATH"

