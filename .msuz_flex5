# vim: set filetype=sh :

# msuz-flex5-linux specific settings go here

# The updated Matoking version has a GUI, which is cool
alias protontricks-flat='flatpak run com.github.Matoking.protontricks'

# Keep Bamboo Ink 2 from treating both screens as one dummy-thicc one
mapwacom -d "Wacom HID 5213 Pen stylus" -d "Wacom HID 5213 Finger touch" -d "Wacom HID 5213 Pen eraser" -s "eDP"

export BROWSER=firefox
EDITOR=vim
SUDO_EDITOR=vim
export EDITOR SUDO_EDITOR

# For non-root use of virsh
export LIBVIRT_DEFAULT_URI=qemu:///system

# These are enabled by default under Wayland and are only here incase we
# need to disable them.
#
# Upd 21/7/21 - Switched back to X11
export MOZ_WEBRENDER=1
export MOZ_X11_EGL=1    # X11 specific

source ~/perl5/perlbrew/etc/bashrc

# JAVA_HOME needs to be set for VSCode and Emacs plugins
export JAVA_HOME="/opt/openjdk"
export PATH="$HOME/.local/bin:$JAVA_HOME/bin:$PATH"
